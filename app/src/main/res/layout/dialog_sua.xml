<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"

    android:layout_width="380dp"
    android:layout_height="650dp"
    android:background="@drawable/background_dialog"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Sửa chi tiêu"
            android:textColor="#000000"
            android:textSize="25dp"></TextView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Số tiên: "
            android:textSize="17dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp">

        </TextView>

        <EditText
            android:id="@+id/edt_tien_sua"
            android:layout_width="230dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:hint="30000"
            android:paddingLeft="15dp"
            android:background="@drawable/background_edit_text"
            android:textColor="@color/black"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Mô tả: "
            android:textSize="17dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp">

        </TextView>

        <EditText
            android:id="@+id/edt_mo_ta_sua"
            android:layout_width="230dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:paddingLeft="15dp"
            android:background="@drawable/background_edit_text"
            android:textColor="@color/black"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Ngày: "
            android:textSize="17dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp">

        </TextView>

        <TextView
            android:id="@+id/txt_them_ngay_sua"
            android:layout_width="230dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/background_edit_text"
            android:textColor="@color/black"
            android:textSize="20dp"></TextView>

        <ImageButton
            android:background="@drawable/background_edit_text"
            android:layout_marginLeft="0dp"
            android:src="@drawable/baseline_all_inbox_24"
            android:id="@+id/btn_lich_sua"
            android:layout_width="25dp"
            android:layout_gravity="center_vertical"
            android:layout_height="25dp">
        </ImageButton>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Khoản chi: "
            android:textSize="17dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp">

        </TextView>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3">

            <RadioGroup
                android:id="@+id/Rdg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <RadioButton
                    android:id="@+id/rd_an"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ăn uống"
                    android:textSize="18dp" />

                <RadioButton
                    android:id="@+id/rd_giaitri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Giải trí"
                    android:textSize="18dp"/>

                <RadioButton
                    android:id="@+id/rd_mua"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Mua sắm"
                    android:textSize="18dp"/>

                <RadioButton
                    android:id="@+id/rd_hoctap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Học tập"
                    android:textSize="18dp"/>

                <RadioButton
                    android:id="@+id/rd_codinh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cố định"
                    android:textSize="18dp"/>
            </RadioGroup>

        </GridLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btn_sua"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:background="@drawable/background_button"
            android:text="Sửa"
            android:layout_marginRight="50dp"
            android:textColor="@color/black" />
        <Button
            android:id="@+id/btn_huy"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:background="@drawable/background_button"
            android:text="Hủy"
            android:textColor="@color/black" />


    </LinearLayout>
</LinearLayout>